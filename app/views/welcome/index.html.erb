<h1>Product List</h1>

<h3>Create an Item</h3>
<div>
<button id="toggle_create_form">Create a Product</button>
<form id="create_product" class="hide">
  <label>Name</label>
  <input type="text" name="product[name]" id="new_product_name" />
  <br />
  <label>Description</label>
  <input type="text" name="product[description]" id="new_product_description" />
  <br />
  <label>Base Price</label>
  <input type="text" name="product[base_price]" id="new_product_base_price" />
  <br />
  <label>Quantity on Hand</label>
  <input type="text" name="product[quanity_on_hand]" id="new_product_quanity_on_hand" />
  <br />
  <label>Color</label>
  <input type="text" name="product[color]" id="new_product_color" />
  <br />
  <label>Weight</label>
  <input type="text" name="product[weight]" id="new_product_weight" />
  <br />
  <input type="submit" />
</form>
</div>
<hr />
